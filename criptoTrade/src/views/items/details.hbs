

        <section id="details-info">
            <h1>Details</h1>
            <div class="coin-image">
                <img src="{{item.imageUrl}}"  alt="{{item.name}}">
            </div>

            <div class="coin-info">
                <div class="coin-text">
                    <h1 id="name">{{item.name}}</h1>
                    <h3 id="payment">Payment method: {{item.paymentMethod}}</h3>
                    <p id="price"><span>Price: ${{item.price}}</span></p>
                    <p id="description">{{item.description}}</p>
                </div>
                <div class="product-btn">
                    <!--Only for registered user and author of the publication -->
                    <div class="author">
                        {{#if isAuthenticated}}
                        {{#if isOwner}}
                        <a href="/items/{{item._id}}/edit" class="btn-edit">Edit</a>
                        <a href="/items/{{item._id}}/delete" class="btn-delete">Delete</a>
                    </div>
                    {{else}}
                    {{#if isLiked}}
                     <!-- Logged in user who has already buy this crypto-->
                    
                    <p class="buy-message">You already bought these crypto coins.</p>
                    {{else}}
                    
                   <!-- Logged in user who has not yet buy this crypto-->
                    <a href="/items/{{item._id}}/like" class="btn-buy">Buy</a>
                    {{/if}}
                    {{/if}}
                    {{/if}}
                </div>
            </div>
        </section>
   
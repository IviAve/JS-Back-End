<section id="details-info">
            <h1>Details</h1>
            <div class="volcano-image">
                <img src="{{item.imageUrl}}" alt="{{item.name}}">
            </div>

            <div class="volcano-info">
                <div class="volcano-text">
                    <h1 id="name">{{item.name}}</h1>
                    <h3 id="location">Location: {{item.location}}</h3>
                    <p id="type">Volcano Type: {{item.type}}</p>
                    <p id="elevation"><span>Elevation: {{item.elevation}}</span></p>
                    <p id="last-eruption">Year of Last Eruption: {{item.lastEruption}}</p>
                    <p id="votes">Vote's Count: {{item.usersList.length}}</p>
                    <p id="description">{{item.description}}</p>
                </div>
                <div class="product-btn">
                    {{#if isAuthenticated}}
                {{#if isOwner}}
                    <!--Only for registered user and author of the publication -->
                    <div class="author">
                        <a href="/items/{{item._id}}/edit" class="btn-edit">Edit</a>
                        <a href="/items/{{item._id}}/delete" class="btn-delete">Delete</a>
                    </div>
                    {{else}}
                    {{#if isLiked}}
                    <!-- Logged in user who has already vote for this volcano-->
                    <p class="vote-message">You've already voted for this volcano!</p>
                    {{else}}
                    <!-- Logged in user who has not yet vote for this volcano-->
                    <a href="/items/{{item._id}}/like" class="btn-vote">Vote</a>
                    
                    {{/if}}
                {{/if}}
                {{/if}}
                </div>
            </div>
        </section>
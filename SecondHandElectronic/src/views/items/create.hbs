            <!-- Create Page (Only for logged-in users) -->
             <section id="createPage">
            <form id='createForm'  method="POST">
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" placeholder="Name..." value="{{item.name}}">

                <label for="type">Type:</label>
                <input type="text" id="type" name="type" placeholder="Type..." value="{{item.type}}">

                <label for="production">Year of Production:</label>
                <input type="number" id="production" name="production" placeholder="Year of Production..." value="{{item.production}}">

                <label for="exploitation">Years of Exploitation:</label>
                <input type="number" id="exploitation" name="exploitation" placeholder="Year of Exploitation..." value="{{item.exploitation}}">

                <label for="damages">Damages:</label>
                <input type="text" id="damages" name="damages" placeholder="Damages..." value="{{item.damages}}">

                <label for="image">Image:</label>
                <input type="text" id="image" name="imageUrl" placeholder="Image..." value="{{item.imageUrl}}">

                <label for="price">Price:</label>
                <input type="number" id="price" name="price" placeholder="Price..." value="{{item.price}}">

                <label for="description">Description:</label>
                <input type="text" id="description" name="description" placeholder="Description..." value="{{item.description}}">                

                <input type="submit" class="create" value="Create Offer">
            </form>
        </section>


        